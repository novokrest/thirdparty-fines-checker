<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>GISGMPmonitoring</groupId>
  <artifactId>1</artifactId>
  <version>1.0-SNAPSHOT</version>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>2.4.3</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <filters>
                <filter>
                  <artifact>*:*</artifact>
                  <excludes>
                    <exclude>META-INF/*.SF</exclude>
                    <exclude>META-INF/*.DSA</exclude>
                    <exclude>META-INF/*.RSA</exclude>
                  </excludes>
                </filter>
              </filters>
              <transformers>
                <transformer>
                  <manifestEntries>
                    <Main-Class>Main</Main-Class>
                    <Build-Number>1.0</Build-Number>
                  </manifestEntries>
                </transformer>
              </transformers>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-jar-plugin</artifactId>
        <version>3.1.0</version>
        <configuration>
          <archive>
            <manifest>
              <addClasspath>true</addClasspath>
              <classpathPrefix>lib/</classpathPrefix>
              <mainClass>App</mainClass>
            </manifest>
          </archive>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.jetbrains.kotlin</groupId>
        <artifactId>kotlin-maven-plugin</artifactId>
        <version>${kotlin.version}</version>
        <executions>
          <execution>
            <id>compile</id>
            <phase>compile</phase>
            <goals>
              <goal>compile</goal>
            </goals>
          </execution>
          <execution>
            <id>test-compile</id>
            <phase>test-compile</phase>
            <goals>
              <goal>test-compile</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <jvmTarget>1.8</jvmTarget>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <configuration>
          <source>1.8</source>
          <target>1.8</target>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <repositories>
    <repository>
      <id>test.yamoney.ru</id>
      <url>https://nexus.yamoney.ru/content/repositories/ot-snapshots/</url>
    </repository>
    <repository>
      <id>yamoney.ru</id>
      <url>https://nexus.yamoney.ru/content/groups/public/</url>
    </repository>
  </repositories>
  <pluginRepositories>
    <pluginRepository>
      <id>yamoney.ru</id>
      <url>https://nexus.yamoney.ru/content/groups/public/</url>
    </pluginRepository>
    <pluginRepository>
      <id>yamoney-cental.ru</id>
      <url>https://nexus.yamoney.ru/content/repositories/central/</url>
    </pluginRepository>
  </pluginRepositories>
  <reporting>
    <excludeDefaults>true</excludeDefaults>
    <plugins>
      <plugin>
        <groupId>ru.yandex.qatools.allure</groupId>
        <artifactId>allure-maven-plugin</artifactId>
      </plugin>
    </plugins>
  </reporting>
  <properties>
    <allure.maven.version>2.9</allure.maven.version>
    <junit.jupiter.version>5.3.1</junit.jupiter.version>
    <testrun.threads>8</testrun.threads>
    <hellper-version>1.12.1-SNAPSHOT</hellper-version>
    <allure2-version>2.7.0</allure2-version>
    <user-storage-client-version>1.7.31-SNAPSHOT</user-storage-client-version>
    <json2kotlin.generator.version>0.7.16-SNAPSHOT</json2kotlin.generator.version>
    <kotlin.version>1.3.31</kotlin.version>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <framework-template.version>0.1.44-SNAPSHOT</framework-template.version>
    <generated-classes-json.version>1.0.500</generated-classes-json.version>
    <jackson.version>2.8.8</jackson.version>
    <kotlin.compiler.incremental>true</kotlin.compiler.incremental>
    <logbook.version>1.7.3</logbook.version>
    <junit.platform.version>1.3.1</junit.platform.version>
    <framework-version>0.1.43-SNAPSHOT</framework-version>
    <selenium.version>3.5.3</selenium.version>
  </properties>
</project>

